@model SAG2.Models.Usuario
@{
    ViewBag.Title = "Ingresar registro";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="SAGBox">
    <h3>Usuarios</h3>
    <div id="controles">
        <p><a href="./Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false">BUSCAR</a></p>
        <p>@Html.ActionLink("NUEVO", "Create")</p>
    </div>
    <div id="contenido">
@Html.Raw(@ViewBag.Mensaje)
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Ingreso de usuarios</legend>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.PersonaID, "Persona")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PersonaID", String.Empty)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Nombre, "Usuario")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Nombre)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Estado, "Habilitado?")
        </div>
        <div class="editor-field">
            <input type="checkbox" name="Estado" value="A" />
        </div>

        <div class="editor-label expandido">
            Tipo usuario
        </div>
        <div class="editor-field">
            <label><input type="radio" name="tipoUsuario" value="N" checked="checked" /> Normal</label>
            <label><input type="radio" name="tipoUsuario" value="S" /> Supervisor</label>
            <label><input type="radio" name="tipoUsuario" value="A" /> Administrador</label>
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Password)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Comentarios)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Comentarios)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
    </div>
</div>
