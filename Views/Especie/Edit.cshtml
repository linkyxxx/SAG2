@model SAG2.Models.Especie
@{
    ViewBag.Title = "Modificar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="SAGBox">
    <h3>Tipo de Especie</h3>
    <div id="controles">
        <p><a href="/SAG2/Especie/Index" onclick="window.open(this.href, 'Buscar','width=1100,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false">BUSCAR</a></p>
        <p>@Html.ActionLink("NUEVO", "Create")</p>
        <p><a href="/SAG2/Especie/Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea eliminar este egreso?');">ELIMINAR</a></p>
        <p>@Html.ActionLink("CANCELAR", "Create")</p>
    </div>
    <div id="contenido">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Nombre, new { size = "30" })
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
</div>
</div>