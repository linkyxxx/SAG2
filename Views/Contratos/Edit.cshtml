@model SAG2.Models.Contrato
@{
    ViewBag.Title = "Modificar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="SAGBox">
    <h3>Contratos</h3>
    <div id="controles">
        <p><a href="../Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false">BUSCAR</a></p>
        <p>@Html.ActionLink("NUEVO", "Create")</p>
        <p><a href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');">ELIMINAR</a></p>
        <p>@Html.ActionLink("CANCELAR", "Create")</p>
    </div>
    <div id="contenido">
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ProyectoID)
    @Html.HiddenFor(model => model.ID)
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Contrato</legend>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.ServicioID, "Servicio")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ServicioID", String.Empty)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Nombre)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Monto)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Monto)
            <select name="Moneda" id="Moneda">
                <option value="Pesos"@if (Model.Moneda.Equals("Pesos")){@Html.Raw(" selected=\"selected\"")}>Pesos</option>
                <option value="UF"@if (Model.Moneda.Equals("UF")){@Html.Raw(" selected=\"selected\"")}>UF</option>
            </select>
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Activo)
        </div>
        <div class="editor-field">
            @if (Model.Activo != null)
            {
                <input type="checkbox" name="Estado" id="Estado" value="Activo" checked="checked" />
            }
            else
            {
                <input type="checkbox" name="Estado" id="Estado" value="Activo" />
            }
        </div>
        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Comentario)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Comentario)
        </div>
        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
    </div>
</div>