@model IEnumerable<SAG2.Models.Contrato>
@{
    Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Contratos";
}
<div class="top" style="height: 28px;">Buscar: <input type="text" id="busqueda" />&nbsp;&nbsp;</div>
 <div id="contenido_popup">
   <table cellpadding="5" border="1" align="center">
    <tr>
        <th class="controles"></th>
        <th>
            Servicio
        </th>
        <th>
            Nombre
        </th>
        <th>
            Monto
        </th>
        <th>
            Moneda
        </th>
        <th>
            Estado
        </th>
        
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            <a href="@Url.Action("Edit", "Contratos", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Servicio.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Moneda)
        </td>
        <td align="center">
        @if (item.Activo != null)
        {
            <span style="background-color: Green; color: White;">ACTIVO</span>
        }
        else
        {
            <span style="background-color: Red; color: White;">INACTIVO</span>
        }
        </td>
        
    </tr>
}
        </table>
    </div>