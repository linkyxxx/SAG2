@model IEnumerable<SAG2.Models.Profesion>
@{
	Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Profesiones";
    SAG2.Classes.Util utils = new SAG2.Classes.Util();
}
<div class="top" style="height: 28px;">Buscar: <input type="text" id="busqueda" />&nbsp;&nbsp;</div>
 <div id="contenido_popup">
        <table cellpadding="5" border="1" align="center">
    <tr>
        <th>
            Profesión
        </th>
        <th class="controles"></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.Raw(utils.ToTitle(@item.Nombre))
        </td>
        <td>
            <a href="@Url.Action("Edit", "Profesion", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
        </td>
    </tr>
        }
        </table>
    </div>