@model SAG2.Models.PreguntaFrecuente

@{
    ViewBag.Title = "Responder";
}
<div class="inicio">
<h2>@ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.PersonaID)
        @Html.HiddenFor(model => model.PreguntaFecha)

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Pregunta)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Pregunta)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Respuesta)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Respuesta)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Comentario)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Comentario)
        </div>

        <p>
            <input type="submit" value="Aceptar" />
        </p>
}
</div>