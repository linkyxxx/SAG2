@model SAG2.Models.ProgramaAnualAuditorias

@{
    ViewBag.Title = "Ingresar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="SAGBox">
<h3>Ingreso</h3>
<div id="controles">
        <p><a href="./Index">BUSCAR</a></p>
        <p>@Html.ActionLink("NUEVO", "Create")</p>
    </div>
    <div id="contenido">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Programa Anual de Auditorías</legend>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.ProyectoID, "Proyecto")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ProyectoID", String.Empty)
        </div>

        <div class="editor-label expandido">
            Fecha Estimada
        </div>
        <div class="editor-field">
            @Html.TextBox("FechaProgramada", DateTime.Now.ToShortDateString(), new { @class = "calendario", @readonly = "readonly" })
        </div>

        <div class="editor-label expandido">
            Fecha Informe
        </div>
        <div class="editor-field">
            @Html.TextBox("FechaReal", null, new { @class = "calendario" })
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
</div></div>