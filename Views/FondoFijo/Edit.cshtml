@model SAG2.Models.FondoFijo
@{
    ViewBag.Title = "Modificar";
    var Periodo = (int)Session["Periodo"];
    var Mes = (int)Session["Mes"];
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="SAGBox">
    <h3>Cuentas</h3>
    <div id="controles">
        <p><a href="../Index?Grupo=@ViewBag.FondoFijoGrupoID" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false">BUSCAR</a></p>
        <p>@Html.ActionLink("NUEVO", "Create", new { Grupo = @ViewBag.FondoFijoGrupoID })</p>
        <p><a href="../../Imprimir/InformeFondoFijo?Grupo=@ViewBag.FondoFijoGrupoID" class="imprimirInformeMes">IMPRIMIR</a></p>
        <p><a href="./Index" id="Guardar">GUARDAR</a></p>
        <p><a href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');">ELIMINAR</a></p>
        <p>@Html.ActionLink("CANCELAR", "Create", new { Grupo = @ViewBag.FondoFijoGrupoID })</p>
    </div>
    <div id="contenido" class="cuentacorriente">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.Periodo)
    @Html.HiddenFor(model => model.Mes)
    @Html.HiddenFor(model => model.ProyectoID)
    <fieldset>
        <legend>Modificación de fondo fijo</legend>
        <div class="editor-label expandido">
            Fondo Fijo
        </div>
        <div class="editor-field">
            <input type="hidden" id="FondoFijoGrupoID" name="FondoFijoGrupoID" value="@ViewBag.FondoFijoGrupoID" />
            <input type="text" value="@ViewBag.NombreFondoFijo" readonly="readonly" style="background-color: #CCC;" />
        </div>
        <div class="editor-label expandido">
            @Html.LabelFor(model => model.CuentaID)
        </div>
        <div class="editor-field">
            <select id="CuentaID" name="CuentaID">
                @Html.Raw(ViewBag.Arbol)
            </select>
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Fecha)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Fecha, new { @Value = Model.Fecha.ToShortDateString(), @readonly = "readonly", @class = "calendario" })
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.NumeroDocumento)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumeroDocumento)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Monto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Monto)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Glosa)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Glosa, new { @cols = "57", @rows = "7" })
        </div>
        <p>
            <input type="submit" value="Guardar" id="botonGuardar" class="validarCuenta" />
        </p>
    </fieldset>
}
    </div>
</div>