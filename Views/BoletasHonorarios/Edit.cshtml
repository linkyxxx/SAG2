@model SAG2.Models.BoletaHonorario
@{
    ViewBag.Title = "Modificar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="SAGBox">
    <h3>Boletas de honorarios</h3>
    <div id="controles">
        <p><a href="../Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false">BUSCAR</a></p>
        <p>@Html.ActionLink("NUEVO", "Create")</p>
        @if (Model.EgresoID == null)
        {
            <p><a href="./Index" id="Guardar">GUARDAR</a></p>
            <p><a href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');">ELIMINAR</a></p>
        }
        <p>@Html.ActionLink("CANCELAR", "Create")</p>
    </div>
    <div id="contenido" class="cuentacorriente">
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.Periodo)
    @Html.HiddenFor(model => model.Mes)
    @Html.HiddenFor(model => model.ProyectoID) 
    @Html.Hidden("Porcentaje", 10)   
    <fieldset>
        <legend>Modificar boleta de honorario</legend>
        <div class="editor-label expandido">
            @Html.LabelFor(model => model.PersonaID, "Persona")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PersonaID", String.Empty)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.NroBoleta)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NroBoleta)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Fecha)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Fecha, new { @Value = Model.Fecha.ToShortDateString(), @readonly = "readonly", @class = "calendario" })
        </div>
        
        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Bruto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Bruto)
        </div>
        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Retencion)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Retencion, new { @readonly = "readonly" })
        </div>
        
        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Neto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Neto)
        </div>
        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Concepto)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Concepto, new { @cols = "57", @rows = "7" })
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Electronica)
        </div>
        <div class="editor-field">
            @if (Model.Electronica == null)
            {
                <input type="checkbox" name="Electronica" id="Electronica" value="1" />
            }
            else
            {
                <input type="checkbox" name="Electronica" id="Electronica" value="1" checked="checked" />
            }
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Nula)
        </div>
        <div class="editor-field">
            @if (Model.Nula == null)
            {
                <input type="checkbox" name="Nula" id="Nula" value="1" />
            }
            else
            {
                <input type="checkbox" name="Nula" id="Nula" value="1" checked="checked" />
            }            
        </div>
        @if (Model.EgresoID == null)
        {
        <p>
            <input type="submit" value="Guardar" id="botonGuardar" />
        </p>
        }
    </fieldset>
}
    </div>
</div>