@model SAG2.Models.AuditoriasMetodologia

@{
    ViewBag.Title = "Create";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="SAGBox">
    <h3>Metodologías de Auditoría</h3>
    <div id="controles">
        <p><a href="./Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false">BUSCAR</a></p>
        <p>@Html.ActionLink("NUEVO", "Create")</p>
    </div>
    <div id="contenido">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Metodologías de Auditoría</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Metodologia)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Metodologia)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Orden)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Orden)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Activo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Activo)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
    </div>
</div>