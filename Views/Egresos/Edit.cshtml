@model SAG2.Models.Movimiento
@using SAG2.Models
@{
    ViewBag.Title = "Modificar";
    var egresoID = Model.ID;
    Usuario Usuario = (Usuario)Session["Usuario"];

    var Meses = new string[12]
    {
	    "Enero",
	    "Febrero",
	    "Marzo",
	    "Abril",
	    "Mayo",
	    "Junio",
	    "Julio",
	    "Agosto",
	    "Septiembre",
	    "Octubre",
	    "Noviembre",
	    "Diciembre"
	};
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@if (ViewBag.Imprimir != null && ViewBag.Imprimir.Equals("true"))
{ 
    <script type="text/javascript" language="javascript">
        window.open("../../Imprimir/Egreso/@Html.Raw(Model.ID.ToString())", 'Comprobante de Egreso', 'width=800,height=600,scrollbars=yes,menubar=no,toolbars=no');
    </script>
}
<div id="SAGBox">
    <h3>Egresos</h3>
    <div id="controles">
        <p><a href="/SAG2/Egresos/Index" onclick="window.open(this.href, 'Buscar','width=1100,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false">BUSCAR</a></p>
        <p>@Html.ActionLink("NUEVO", "Create")</p>
        <p><a href="../../Imprimir/Egreso/@Html.Raw(Model.ID.ToString())" onclick="window.open(this.href, 'Comprobante de Egreso','width=800,height=600,scrollbars=yes,menubar=no,toolbars=no'); return false">IMPRIMIR</a></p>
        @if (Model.Nulo == null || Model.Nulo.Equals("N"))
        {
            <p><a href="./Index" id="linkGuardar">GUARDAR</a></p>
            <p><a href="../LiberarEgreso/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea liberar este egreso? Eliminará todo el detalle asociado a él.');">LIBERAR</a></p>
            <p><a href="../Anular/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea anular este egreso? Si lo hace, PERDERÁ el correlativo.');">ANULAR</a></p>
        }
        @if (@ViewBag.UltimoIdentificador != null && @ViewBag.UltimoIdentificador.Equals(Model.ID.ToString()))
        {
            <p><a href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea eliminar este egreso? Si lo hace, podrá utilizar nuevamente este correlativo.');">ELIMINAR</a></p>
        }
        <p>@Html.ActionLink("CANCELAR", "Create")</p>
        <p>&nbsp;</p>
        @if (Model.Nulo == null || Model.Nulo.Equals("N"))
        {
        <p><a href="./Index" id="linkGeneral">GENERAL</a></p>
        <p><a href="./Index" class="linkDetalle" editar="1">DETALLE</a></p>
        }
    </div>
    <div id="contenido" class="cuentacorriente egreso">
<fieldset id="general">
        <legend>Comprobante de egreso</legend>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    @Html.Raw(@ViewBag.Mensaje)
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.ProyectoID)
    @Html.HiddenFor(model => model.CuentaCorrienteID)
    @Html.HiddenFor(model => model.Periodo)
    @Html.HiddenFor(model => model.Mes)
    @Html.HiddenFor(model => model.TipoComprobanteID)
    @Html.HiddenFor(model => model.FechaCreacion)
    @Html.Hidden("MontoOriginal", "0")
    <input type="hidden" name="FondoFijoGrupoID" id="FondoFijoGrupoID" value="@ViewBag.FondoFijoGrupoID" />
    <input type="hidden" name="NDocumento" id="NDocumento" value="1" />
    if (Model.Nulo != null && Model.Nulo.Equals("S"))
    {
        <input type="hidden" name="Nulo" id="Nulo" value="S" />
        <script type="text/javascript" language="javascript">
            $(document).ready(function () {
                $("input").attr('disabled', 'disabled');
                $("select").attr('disabled', 'disabled');
                $("textarea").attr('disabled', 'disabled');
            });
        </script>
    }
         <div class="editor-label expandido">
            @Html.LabelFor(model => model.NumeroComprobante)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.NumeroComprobante, new { @readonly = "readonly", @Value = @Model.NumeroComprobante, @size = @Model.NumeroComprobante.ToString().Length })
            <a href="/SAG2/Egresos/Index" onclick="window.open(this.href, 'Buscar','width=1100,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false">
                <img src="@Url.Content("~/Content/Images/Buscar2.png")" alt="Buscar" title="Buscar" style="vertical-align: middle;" />
            </a>
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Fecha)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Fecha, new { @Value = @Model.Fecha.Value.ToShortDateString(), @readonly = "readonly", @class = "calendario_mov" })
        </div>

      
        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Cheque)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Cheque)
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.FechaCheque)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.FechaCheque, new { @Value = @Model.FechaCheque.Value.ToShortDateString(), @readonly = "readonly", @class = "calendario" })
        </div>

       <div class="editor-label expandido">
            @Html.LabelFor(model => model.Monto_Egresos)
        </div>
        <div class="editor-field">
            <input type="text" name="Monto_Egresos" id="Monto_Egresos" readonly="readonly" style="background-color: #CCC;" value="@ViewBag.MontoEgreso" />
        </div>

        <div class="editor-label expandido">
            @Html.Label("Beneficiario")
        </div>
        <div class="editor-field tipobeneficiario">
            <select name="tipoBeneficiario" id="tipoBeneficiario">
                <option value="1"@if (Model.Persona != null)
                                 { @Html.Raw(" selected=\"selected\"") }>Personal</option>
                <option value="2"@if (Model.Proveedor != null)
                                 { @Html.Raw(" selected=\"selected\"") }>Proveedores</option>
                <option value="3"@if (Model.Persona == null && Model.Proveedor == null)
                                 { @Html.Raw(" selected=\"selected\"") }>Otro</option>
            </select> 
            @Html.Hidden("PersonaID")
            @Html.Hidden("ProveedorID")

            <span id="InfoBeneficiario">
                @Html.TextBoxFor(model => model.Rut, new { @style = "width: 60px;", @maxlength = "8" })-@Html.TextBoxFor(model => model.DV, new { @id = "DVBuscar", @style = "width: 15px;", @maxlength = "1" }) 
                <img src="@Url.Content("~/Content/Images/Buscar2.png")" class="BuscarPopUpPersonal" alt="Buscar" title="Buscar" style="vertical-align: middle; cursor:pointer;" />
                @Html.TextBoxFor(model => model.Beneficiario, new { @style = "width: 250px;", @readonly = "readonly" })
            </span>
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Descripcion, "Glosa global")
        </div>
        <div class="editor-field">
            @if (Model.Nulo == null || Model.Nulo.Equals("N"))
            {
                @Html.TextArea("Descripcion", new { @cols = "60", @rows = "7", @value = Model.Descripcion })
            }
            else
            {
                @Html.Raw("<textarea name=\"Descripcion\" id=\"Descripcion\" cols=\"60\" rows=\"7\">COMPROBANTE NULO</textarea>")
            }
        </div>
    
            if (Usuario.esAdministrador)
            {
        <div class="editor-label expandido">
            Período
        </div>
        <div class="editor-field">
            <input type="text" value="@Model.Periodo" readonly="readonly" />
        </div>
         <div class="editor-label expandido">
            Mes
        </div>
        <div class="editor-field">
            <input type="text" value="@Meses[@Model.Mes - 1]" readonly="readonly" />
        </div>
            }

            if (Model.Nulo == null || Model.Nulo.Equals("N"))
            {
        <p>

            <input type="submit" id="botonGuardar" value="" style="display: none;" class="boton" />
            <input type="button" class="linkDetalle boton" value="Ir al detalle" editar="1" />
        </p>
            }
}
    <br />
    </fieldset>
    <fieldset id="detalle">
        <legend>Detalle comprobante de egreso</legend>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.Hidden("DeudaPendienteID", null);
    @Html.Hidden("BoletaHonorarioID", null);
    @Html.Hidden("DetalleEgresoID", null);
    @Html.Hidden("MontoOriginal", null);
        <div class="editor-label expandido">
            @Html.Label("Origen")
        </div>
        <div class="editor-field">
            <select name="Origen" id="Origen">
                <option></option>
                <option value="dp">DEUDA PENDIENTE</option>
                <option value="hs">HONORARIOS Y SERVICIOS</option>
                <option value="ff">CAJA CHICA</option>
                <option value="oo" selected="selected">OTROS</option>
            </select>
        </div>

        <div class="editor-label expandido">
            @Html.Label("Nº Comprobante D/P")
        </div>
        <div class="editor-field">
            @Html.TextBox("NComprobanteDP", String.Empty)
        </div>

        <div class="editor-label expandido">
            @Html.Label("Tipo Documento")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DocumentoIDD", String.Empty)
        </div>

        <div class="editor-label expandido">
            @Html.Label("Nº Documento")
        </div>
        <div class="editor-field">
            @Html.TextBox("NDocumentoD")
        </div>

        <div class="editor-label expandido">
            @Html.Label("Monto $")
        </div>
        <div class="editor-field">
            @Html.TextBox("Monto")
        </div>

        <div class="editor-label expandido">
            @Html.Label("Emisión")
        </div>
        <div class="editor-field">
            @Html.TextBox("FechaEmision", DateTime.Now.ToShortDateString(), new { @class = "calendario", @readonly = "readonly" })
        </div>

        <div class="editor-label expandido">
            @Html.Label("Vencimiento")
        </div>
        <div class="editor-field">
            @Html.TextBox("FechaVencimiento", DateTime.Now.ToShortDateString(), new { @class = "calendario", @readonly = "readonly" })
        </div>

        <div class="editor-label expandido">
            @Html.Label("Cuenta")
        </div>
        <div class="editor-field">
            <select name="CuentaID" id="CuentaID">
                @Html.Raw(@ViewBag.Arbol)
            </select>
        </div>

        <div class="editor-label expandido">
            @Html.Label("Glosa")
        </div>
        <div class="editor-field">
            @Html.TextArea("Glosa", new { @cols = "60", @rows = "7" })
        </div>
                                       if (Model.Nulo == null || Model.Nulo.Equals("N"))
                                       {
            <p>
                <input type="button" value="Guardar línea" id="GuardarLinea" class="boton" />
                <input type="button" value="Borrar línea" id="BorrarLinea" class="boton" />
            </p>
                                       }
        
        <p>&nbsp;</p>
        <p>&nbsp;</p>
    
        <table style="margin: 0; padding: 0;">
            <tr style="margin: 0; padding: 0;">
                <td style="margin: 0; padding: 0;"><h3 style="margin: 0; padding: 0;">Detalle del egreso</h3></td>
                <td style="margin: 0; padding: 0; text-align: right;">Haga clic en una línea para ver información</td>
            </tr>
        </table>
        <iframe src="/SAG2/Egresos/ListarLineas/?t=@egresoID.ToString()" width="660px" height="200px" id="iframeDetalle" frameborder="0" scrolling="auto"></iframe>
}
        </fieldset>
    </div>
</div>