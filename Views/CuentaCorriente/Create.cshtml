@model SAG2.Models.CuentaCorriente
@{
    ViewBag.Title = "Ingresar registro";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="SAGBox">
    <h3>Cuentas corrientes</h3>
    <div id="controles">
        <p><a href="./Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false">BUSCAR</a></p>
        <p>@Html.ActionLink("NUEVO", "Create")</p>
    </div>
    <div id="contenido" class="cuentacorriente">
@Html.Raw(ViewBag.Mensaje)
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
        <td valign="top" style="width: 340px;">
        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Numero)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Numero, new { @tabindex = "1" })
            <a href="./Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false">
                <img src="@Url.Content("~/Content/Images/Buscar2.png")" alt="Buscar" title="Buscar" style="vertical-align: middle;" />
            </a>
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.BancoID, "Banco")
        </div>
        <div class="editor-field">
            @Html.DropDownList("BancoID", null, new { @tabindex = "2" })
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Sucursal)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Sucursal, new { @tabindex = "3" })
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.LineaCredito, "Línea de crédito")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.LineaCredito, new { @tabindex = "4" })
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.ProyectoID, "Proyecto")
        </div>
        <div class="editor-field">
            @Html.DropDownList("EstablecimientoID", null, new { @tabindex = "5", @disabled = "disabled" })
        </div>

        <div class="editor-label expandido">
            @Html.Label("Dirección")
        </div>
        <div class="editor-field">
            @Html.TextBox("N", null, new { @style = "width: 0; border: 0 solid White;", @disabled = "disabled" }) 
        </div>
        <div class="editor-label expandido subitem">
            @Html.Label("Calle")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Direccion.Calle, new { @tabindex = "6" }) 
        </div>
        <div class="editor-label expandido subitem">
            @Html.Label("Número")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Direccion.Numero, new { @tabindex = "7" }) 
        </div>
        <div class="editor-label expandido subitem">
            @Html.Label("Departamento")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Direccion.Depto, new { @tabindex = "8" }) 
        </div>
        <div class="editor-label expandido subitem">
            @Html.Label("Región")
        </div>
        <div class="editor-field">
            @Html.DropDownList("RegionID", null, new { @tabindex = "9" })
        </div>
        <div class="editor-label expandido subitem">
            @Html.Label("Comuna")
        </div>
        <div class="editor-field">
            <select name="ComunaID" id="ComunaID" tabindex="10">
                <option>Seleccione región</option>
            </select>
        </div>
        </td>
        <td valign="top">
        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Ejecutivo)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Ejecutivo, new { @tabindex = "11" })
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Fono)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Fono, new { @tabindex = "12" })
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Fax)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Fax, new { @tabindex = "13" })
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Movil)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Movil, new { @tabindex = "14" })
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.CorreoElectronico, "Email")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.CorreoElectronico, new { @tabindex = "15" })
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.PaginaWeb)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.PaginaWeb, new { @tabindex = "16" })
        </div>

        <div class="editor-label expandido">
            @Html.LabelFor(model => model.Comentarios)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Comentarios, new { @tabindex = "17" })
        </div>       
        <p>
            <input type="submit" value="Guardar" tabindex="17" />
        </p>
        </td>
        </tr>
        </table>
        </fieldset>
}
    </div>
</div>