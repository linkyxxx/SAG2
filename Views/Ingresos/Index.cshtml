@model IEnumerable<SAG2.Models.Movimiento>
@{
    Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Ingresos";
}
<div class="top" style="height: 28px;">Buscar: <input type="text" id="busqueda" />&nbsp;&nbsp;</div>
 <div id="contenido_popup">
   <table cellpadding="5" border="1" align="center">
    <tr>
    <th class="controles"></th>
        <th>Nº Comp.</th>
        <th>Fecha</th>
        <th>Cuenta</th>
        <th>Nº Cheque</th>
        <th>Monto $</th>
        <th>Cta. Cte.</th>
        <th>Glosa</th>
        
    </tr>

@foreach (var item in Model)
{
    var style = "";
        if (item.Nulo != null && item.Nulo.Equals("S"))
        {
            style = " style=\"text-decoration: line-through;\"";
        }
    
        <tr@Html.Raw(style)>
    <td>
        <a href="@Url.Action("Edit", "Ingresos", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
    </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.NumeroComprobante)
        </td>
        <td>
            @item.Fecha.Value.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cuenta.NombreLista)
        </td>
        <td align="right">
            @Html.DisplayFor(modelItem => item.Cheque)
        </td>
        <td align="right">
            <strong>
            $@item.Monto_Ingresos.ToString("#,##0") 
            </strong>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CuentaCorriente.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        
    </tr>
}
        </table>
    </div>